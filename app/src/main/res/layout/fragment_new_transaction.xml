<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vp_transaction_type_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingsBackgroundColor"
    android:clipToPadding="true">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_transaction_types"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:fadeScrollbars="false"
        android:fillViewport="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/greyWarm">

        <android.support.design.widget.TabItem
            android:id="@+id/ti_new_transaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/transaction" />

        <android.support.design.widget.TabItem
            android:id="@+id/ti_new_draft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/draft" />
    </android.support.design.widget.TabLayout>

</android.support.v4.view.ViewPager>

